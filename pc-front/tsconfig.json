{
  "compilerOptions": {
    //这里的内容 已经比较固定了,无需乱添加
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "lib": ["es6", "dom"],
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": [
    ],
    "types": [
      "core-js",
      "jasmine",
      "lodash",
      "node",
      "source-map",
      "uglify-js",
      "pluralize",
      "toastr",
      "webpack"
    ]
  },
  "exclude": [
    "node_modules"
  ],

  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }

}
